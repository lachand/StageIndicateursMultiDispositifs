#:kivy 1.0.9

FloatLayout:

<User>:
    pos: self.Position
    size: self.Taille
    canvas:
        Color:
            rgb: self.Couleur
        Ellipse:
            pos: self.Position
            size: self.Taille

<Concept>:
    Scatter:
        do_rotation: True
        do_scale: True
        do_translation: True

<Bouton>:
    canvas:
        Color:
            rgb: self.Couleur
        Ellipse:
            pos: self.Position
            size: 30,30

<Animal>:
    Scatter:
        size: 100,100
        do_rotation: True
        do_scale: True
        do_translation: True

<Demo>:
    size: root.size
    pos: root.pos